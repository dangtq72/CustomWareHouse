@using CW_Info;
    @{
        int Stt = 0;
        if (ViewBag.FromRow != null)
        {
            Stt = ViewBag.FromRow;
        }

        List<Categories_Info> _list_obj = new List<Categories_Info>();
        if (ViewBag.Obj != null)
        {
            _list_obj = ViewBag.Obj;
        }
    }
    <style>
        table td {
            vertical-align: middle !important;
        }
    </style>
    <div class="table-responsive">
        <table class="table table-bordered table-striped _tablelist" id="tblVotingList">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã sản phẩm</th>
                    <th>Tên sản phẩm</th>
                    <th>Đơn vị</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            @if (_list_obj.Count == 0)
            {
                <tr class="tbColorRows">
                    <td colspan="11" style="text-align: center; font-size: 18px; padding: 10px 0px 10px 0px;">
                        <p>Không có kết quả nào</p>
                    </td>
                </tr>
            }
            <tbody>
                @foreach (Categories_Info item in _list_obj)
                {
                    ++Stt;
                    <tr class="tbColorRows">
                        <td style="display: none">@item.Category_Id</td>
                        <td class="clssCenter">@Stt</td>
                        <td class="clssCenter">@item.Category_Code</td>
                        <td class="clssCenter">@item.Category_Name</td>
                        <td class="clssCenter">@item.Unit</td>
                        <td class="clssCenter" style="white-space:nowrap">
                            <a href="javascript:;" onclick="ShowViewCategory(@item.Category_Id)">Chi tiết</a>
                            | <a href="javascript:;" onclick="ShowInsertCategory()">Thêm</a>
                            | <a href="javascript:;" onclick="UpdateCategory(@item.Category_Id)">Sửa</a>
                            | <a href="javascript:;" onclick="DeleteCategory(@item.Category_Id)">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
 
    <div class="_ClassPage">
        <ul>
            @Html.Raw(ViewBag.Paging)
        </ul>
    </div>

     