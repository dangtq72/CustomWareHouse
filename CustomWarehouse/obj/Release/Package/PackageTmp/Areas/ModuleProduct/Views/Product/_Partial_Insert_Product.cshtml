@using CW_Info;
@{
    List<Categories_Info> lstCategory = new List<Categories_Info>();
    if (ViewBag.LstCategory != null)
    {
        lstCategory = ViewBag.LstCategory;
    }
}
<style>
    .row-input {
        margin-top: 9px;
    }

    .ms-ul ul li {
        text-align: left;
    }

    .ms-ul input {
        width: 10%;
    }
</style>
<div class="form-row" style="padding:10px;padding-right:0;padding-left:20px">
    <div id="@("d_mess_InsertProduct")" class="d_Message"></div>

    <div class="row-input col-4-6">
        Mã sản phẩm <i style="color: red">(*)</i>
    </div>
    <div class="row-input col-6-4">
        <input type="text" id="@("_txtProductCode")" maxlength="100" onkeydown="PressEnterInsertProduct(event)" />
    </div>
    <<div class="row-input col-4-6">
        Tên sản phẩm <i style="color: red">(*)</i>
    </div>
    <div class="row-input col-6-4">
        <input type="text" id="@("_txtProductName")" maxlength="100" onkeydown="PressEnterInsertProduct(event)" />
    </div>

    <div class="row-input col-4-6">
        Loại sản phẩm
    </div>

    <div class="row-input col-6-4">
        <select id="@("_cboCategory")" style="width:250px">
            @foreach (Categories_Info item in lstCategory)
            {
                <option value="@item.Category_Id">
                    @item.Category_Name
                </option>
            }
        </select>
    </div>
    <div class="row-input col-4-6">
        Đơn vị <i style="color: red">(*)</i>
    </div>
    <div class="row-input col-6-4">
        <input type="text" id="@("_txtUnit")" maxlength="100" onkeydown="PressEnterInsertProduct(event)" />
    </div>


    <div class="row-input col-6-4" style="margin-left: 40%;margin-top:10px">
        <input type="button" id="_btnInsertProduct" value="Chấp nhận" onclick="return SaveProduct()" />
        <input type="button" style="margin-left: 5px" value="Hủy" onclick="return CloseInsertProduct()" />
    </div>
</div>

