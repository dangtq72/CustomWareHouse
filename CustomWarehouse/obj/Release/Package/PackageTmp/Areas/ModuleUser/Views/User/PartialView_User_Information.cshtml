@model CW_Info.User_Info

<div class="" style="padding-left: 20px;">
    @Html.HiddenFor(m => m.User_Id, new { @id = "txtView_UserId" })
    @Html.HiddenFor(m => m.User_Name, new { @id = "txtView_UserName" })
    @Html.HiddenFor(m => m.Password, new { @id = "txtView_Password" })
    @Html.HiddenFor(m => m.User_Type, new { @id = "txtView_UserType" })

    <div class="col-11" style="margin-left: 10px;padding: 0;">
        <table class=" clsTableForView ">

            <tbody>
                <tr>
                    <td>Tên tài khoản</td>
                    <td>@Html.DisplayFor(m => m.User_Name)</td>
                </tr>

                <tr>
                    <td style="vertical-align:top">Tên đầy đủ</td>
                    <td style="white-space:normal">@Html.DisplayFor(m => m.Full_Name)</td>
                </tr>
                <tr>
                    <td>Loại người dùng</td>
                    <td>@Html.DisplayFor(m => m.Type_Name)</td>
                </tr>

                @if (Model.User_Type == 1)
                {
                    <tr>
                        <td>Đơn vị hải quan</td>
                        <td>@Html.DisplayFor(m => m.Custom_Name)</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
    <div class="form-group">
        <div class="col-11" style="border-top: 1px solid #7b68ee;margin-left:10px;margin-top: 10px;padding-top: 10px;padding-left: 0;padding-right: 0;">
            <input type="button" class="classBtn classBtn-Default" value="Thoát" onclick="CloseViewUser()" style="width: auto;float: right" />
        </div>
    </div>
</div>




<script>
    $(function () {
        var j_phonecu = $("#txtView_Phone").val();
        $('#txtPhoneCu').text(j_phonecu);
        $('#txtIssuerName').text( $('#cboMapping_code option:selected').text());
    });

</script>
