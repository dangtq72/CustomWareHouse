<body>

    <input type="hidden" value="@TempData["TabFocus"]" id="_txttabfocus" />
    <input type="hidden" value="@TempData["Lifocus"]" id="_txtlifocus" />
    <input type="hidden" value="@TempData["Msg"]" id="txtErr" />
